<%= render "shared/content_title", title: "Posts" %>

<% @posts.each do |p| %>
  <div class="row">
    <div class="span 8 well">
      <%= render p.categories %>
      <h4><%= link_to p.title, p.url %></h4>
      <p><%= p.description %></p>
      <p>
        <span class="quiet">posted by </span><%=p.user.username %>
        <small>at <%= p.created_at %></small>
      </p>
      <span>
        <%= link_to "#{p.comments.size} comments", post_path(p) %>
    </div>
  </div>
<% end %>
