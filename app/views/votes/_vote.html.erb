<!-- Partial to display the vote (up/down arrows) section next to posts and comments -->
<!-- Note: "obj" corresponds to either a @post or @comment object -->

<% if logged_in? %>
  <div class="span0 well text-center">

    <!-- Upvote -->
    <% if obj.class == Post %>
      <%= link_to vote_post_path(obj, vote: true), method: :post, remote: true do %>
        <i class="icon-arrow-up"></i>
      <% end %>
    <% elsif obj.class == Comment %>
      <%= link_to vote_post_comment_path(obj.post, obj, vote: true), method: :post, remote: true do %>
        <i class="icon-arrow-up"></i>
      <% end %>
    <% end %>

    <!-- Num votes -->
    </br>
      <span id='<%=obj.class%>_<%=obj.slug%>_votes'>
        <%= obj.total_votes%> votes
      </span>
    </br>

    <!-- Downvote -->
    <% if obj.class == Post %>
      <%= link_to vote_post_path(obj, vote: false), method: :post, remote: true do %>
        <i class="icon-arrow-down"></i>
      <% end %>
    <% elsif obj.class == Comment %>
      <%= link_to vote_post_comment_path(obj.post, obj, vote: false), method: :post, remote: true do %>
        <i class="icon-arrow-down"></i>
      <% end %>
    <% end %>
   </div>
<% end %>
